{
  "name": "@cashfarm/microservice",
  "version": "0.1.0",
  "description": "A prepackaged microservice base using Hapi, Inversify and Plow goodness.",
  "main": "index.js",
  "typings": "index.d.ts",
  "license": "UNLICENSED",
  "scripts": {
    "ava:w": "ava --watch",
    "build": "yarn run clean && yarn lint && yarn test && yarn compile && yarn lint:pkg",
    "package": "yarn run clean && yarn compile && cp package.json README.md package/ && cd package && npm publish --access public",
    "clean": "rm -rf ./package && rm -rf tests/compiled",
    "compile": "tsc -p .",
    "compile:w": "tsc -p . -w",
    "dev": "yarn run clean && yarn compile && concurrently --kill-others --raw \"tsc -p . -w\" \"nodemon\"",
    "docs": "./node_modules/.bin/typedoc --out ./docs --target es6 --mode file --ignoreCompilerErrors",
    "docs:publish": "./node_modules/.bin/gh-pages -d docs",
    "lint": "tslint --project ./tsconfig.json -c ./tslint.json --type-check",
    "lint:pkg": "ts-package-lint",
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "test": "tsc -p tests && NODE_ENV=test ava",
    "test:w": "NODE_ENV=test run-p compile:w test:compile:w ava:w",
    "test:compile:w": "yarn tsc -- -p tests -w",
    "tsc": "./node_modules/.bin/tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cashfarm/microservice.git"
  },
  "keywords": [
    "api"
  ],
  "author": "Saulo Vallory <me@saulovallory.com>",
  "bugs": {
    "url": "https://github.com/cashfarm/microservice/issues"
  },
  "homepage": "https://github.com/cashfarm/microservice#README",
  "dependencies": {
    "@cashfarm/api-util": "0.8",
    "@cashfarm/lang": "^0.6.5",
    "@cashfarm/plow": "^0.3.13",
    "@cashfarm/store": "^0.5.6",
    "blipp": "^2.3.0",
    "bluebird": "^3.5.0",
    "boleto.js": "^1.0.1",
    "boom": "^3.2.2",
    "confidence": "^3.0.1",
    "debug": "^2.2.0",
    "glue": "^4.2.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "gulp-concat-filenames": "^1.2.0",
    "gulp-recursive-folder": "^0.9.4",
    "gulpclass": "^0.1.2",
    "hapi": "16.5.2",
    "hapi-cors-headers": "^1.0.0",
    "hapi-swagger": "^7.7.1",
    "inert": "^4.2.1",
    "inversify": "^3.1.0",
    "inversify-binding-decorators": "^3.0.0",
    "joi": "^9.0.4",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "mysql": "^2.11.1",
    "node-boleto": "^2.0.2",
    "node-eventstore-client": "^0.1.7",
    "node-uuid": "^1.4.7",
    "nodemon": "^1.11.0",
    "osascript": "^1.2.0",
    "paypal-nvp-api": "^1.2.33",
    "pubsub-js": "^1.5.7",
    "reflect-metadata": "^0.1.10",
    "slug": "^0.9.1",
    "source-map-support": "^0.4.15",
    "tv": "^6.1.0",
    "twilio": "^3.6.2",
    "unirest": "^0.5.1",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/boom": "0.0.32",
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "^0.0.31",
    "@types/chalk": "^0.4.31",
    "@types/confidence": "^1.4.30",
    "@types/debug": "^0.0.29",
    "@types/hapi": "^16.1.10",
    "@types/istanbul": "^0.4.29",
    "@types/joi": "^9.0.32",
    "@types/lab": "^11.1.0",
    "@types/lodash": "^4.14.71",
    "@types/mocha": "^2.2.32",
    "@types/mysql": "0.0.29",
    "@types/node": "^6.0.41",
    "@types/node-uuid": "^0.0.28",
    "@types/pubsub-js": "^1.5.17",
    "@types/reflect-metadata": "0.0.4",
    "@types/request": "0.0.31",
    "@types/rimraf": "^0.0.28",
    "@types/slug": "^0.9.0",
    "@types/source-map-support": "^0.4.0",
    "@types/twilio": "^0.0.9",
    "@types/uuid": "^3.4.0",
    "ava": "^0.16.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chalk": "^1.1.3",
    "concurrently": "^3.5.0",
    "gulp": "^3.9.1",
    "gulp-watch": "^4.3.11",
    "istanbul": "^0.4.4",
    "lab": "^11.0.0",
    "mocha": "^3.0.2",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.5.4",
    "ts-node": "^1.2.2",
    "ts-package-lint": "^0.2.2",
    "tslint": "^5.5.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.4.2",
    "typings": "^1.3.2"
  },
  "autotypes": {
    "ignore": [
      "stripe"
    ]
  },
  "ava": {
    "files": [
      "tests/compiled/**/*.test.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": false,
    "verbose": true,
    "tap": false,
    "powerAssert": false,
    "babel": {
      "presets": [
        "es2015-node6"
      ],
      "plugins": [
        "transform-async-to-generator"
      ]
    }
  }
}
